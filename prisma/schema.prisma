// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String
  lastname  String
}

model Run {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  duration     Int
  kilometers   Int
  kilocalories Int
  description  String
  location     String
  type         RunType
  startedDate  DateTime
  weather      WeatherType
}

enum RunType {
  OUT
  IN
}

enum WeatherType {
  SUNY
  SUN_AND_CLOUD
  CLOUDY
  RAINY
}
